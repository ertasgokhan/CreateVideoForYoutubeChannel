@model YuotubeModel

@{
    ViewData["Title"] = "Home Page";
}


<form asp-action="Index" method="post" novalidate="">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label for="Url">Url</label>
        <input class="form-control" id="Url" type="url" asp-for="Url" required placeholder="Url" />
    </div>
    <div class="form-group">
        <label for="ProductName">Product Name</label>
        <input class="form-control" id="ProductName" type="text" asp-for="ProductName" required placeholder="Product Name" />
    </div>
    <div class="form-group">
        <label for="FolderName">Folder rName</label>
        <input class="form-control" id="FolderName" type="text" asp-for="FolderName" required placeholder="Folder Name" />
    </div>
    <div class="form-group">
        <button class="btn btn-primary" type="submit" name="submit">Dosyayı oluştur</button>
    </div>
</form>
